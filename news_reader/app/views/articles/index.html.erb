<nav class="navbar navbar-expand-lg navbar-dark bg-primary pb-2">
  <div class="container">
    <a class="navbar-brand" href="#">Simple news parser</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor03">
      <ul class="navbar-nav mr-auto">
      </ul>
      <%= form_tag "/articles", method: :get, class: 'form-inline my-2 my-lg-0' %>
      <%= text_field_tag :query, nil, :placeholder => 'Search news..', class: 'form-control mr-sm-2' %>
      <%= submit_tag "Search" , class: 'btn btn-secondary my-2 my-sm-0' %>
    </div>
  </div>
</nav>
<main class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <% if @response %>
          <% @response["data"].each do |element| %>
            <h3>
              <%= element["attributes"]["title"] %>
            </h3>
            <p class="text-muted">
              <%= element["attributes"]["description"] %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</main>
